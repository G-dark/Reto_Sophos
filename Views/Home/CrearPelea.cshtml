<h2 class="text-center">   Crear </h2>
<div class="align-items-center">
    <div class="input-group">

        <form method="post" action="/Home/CrearHSP">

            <div class="input-group-append">
                <select name="Dropdown1" id="Dropdown1">
                    <option class="dropdown-item" value="heroe">Heroe</option>
                    <option class="dropdown-item" value="sponsorT">Sponsor</option>
                    <option class="dropdown-item" value="pelea">Pelea</option>
                </select>
            </div>

            <div class="input-group">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Traer formulario</button>
                </div>
            </div>


        </form>
    </div>
</div>

<form method ="post" action="/Home/CrearP">
    <div class="mb-3">
        <label for="" class="form-label">Resultado</label>

        <div class="input-group-append">
            <select name="result" id="Dropdown2">
                <option class="dropdown-item" value="0">Ganador Heroe</option>
                <option class="dropdown-item" value="1">Ganador Villano</option>
            </select>
        </div>

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Nombre del heroe</label>
        <input type="text" class="form-control" name="heroname" maxlength="50" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Nombre del Villano</label>
        <input type="text" class="form-control" name="villainname" maxlength="50" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Comentarios</label>
        <input type="text" class="form-control" name="comments" maxlength="100">
    </div>



    <button type="submit" class="btn btn-primary">Crear</button>
</form>